{
	"name": "hassio-frontend-shadcn",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build:css": "npx tailwindcss -i src/globals.css -o dist/globals.css --watch",
		"build": "npx tailwindcss -i src/globals.css -o dist/globals.css && npx esbuild src/index.tsx --bundle --format=esm --outfile=dist/index.js --jsx=automatic --target=esnext --define:process.env.NODE_ENV='\"production\"'",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"deploy": "npm run build && wrangler deploy",
		"test": "vitest",
		"cf-typegen": "wrangler types"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@tailwindcss/typography": "^0.5.19",
		"@types/react": "^19.1.15",
		"@types/react-dom": "^19.1.9",
		"autoprefixer": "^10.4.21",
		"esbuild": "^0.25.10",
		"postcss": "^8.5.6",
		"tailwindcss": "^3.4.0",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.40.2"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.544.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tailwind-merge": "^3.3.1"
	}
}
